#!ipxe

ifopen net0
set net0/ip {{ PUBLIC_IP }}
set net0/netmask 255.255.255.0
set net0/gateway {{ PUBLIC_GW }}
set dns 8.8.8.8

set base-url https://stable.release.flatcar-linux.net/amd64-usr/current
kernel ${base-url}/flatcar_production_pxe.vmlinuz initrd=flatcar_production_pxe_image.cpio.gz console=tty0 console=ttyS0 flatcar.autologin ip={{ PUBLIC_IP }}::{{ PUBLIC_GW }}:255.255.255.0::enp1s0f0:off:8.8.8.8
initrd ${base-url}/flatcar_production_pxe_image.cpio.gz

boot
