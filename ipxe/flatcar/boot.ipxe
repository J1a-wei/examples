#!ipxe

ifopen net0
set net0/ip {{public_ip}}
set net0/netmask {{net_mask}}
set net0/gateway {{gateway}}
set dns 8.8.8.8

set base-url https://stable.release.flatcar-linux.net/amd64-usr/current
kernel ${base-url}/flatcar_production_pxe.vmlinuz initrd=flatcar_production_pxe_image.cpio.gz console=tty0 console=ttyS0 flatcar.autologin ip={{public_ip}}::{{gateway}}:{{net_mask}}::enp1s0f0:off:8.8.8.8
initrd ${base-url}/flatcar_production_pxe_image.cpio.gz

boot